{
	"compilerOptions": {
		"allowJs": false,
		"lib": [
			"es6"
		],
		"listEmittedFiles": false,
		"listFiles": false,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "./out",
		"removeComments": true,
		"experimentalDecorators": true,
		"rootDir": ".",
		"rootDirs": [
			"./src",
			"./tests"
		],
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es6",
		"traceResolution": false,
		"declaration": true,
		"alwaysStrict": true
	},
	"include": [
		"./src/**/*",
		"./tests/**/*"
	]
}
