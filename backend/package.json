{
	"name": "yeoman-ui",
	"displayName": "Yeoman UI",
	"publisher": "SAP",
	"license": "Apache 2.0",
	"description": "Provide rich user experience for Yeoman generators using VSCode extension or the browser",
	"repository": "https://github.com/SAP/yeoman-ui",
	"version": "0.0.13",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:loadYeomanUI_projects",
		"onCommand:loadYeomanUI"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "loadYeomanUI_projects",
				"title": "Yeoman UI Project Generators"
			},
			{
				"command": "loadYeomanUI",
				"title": "Yeoman UI Generators"
			}
		]
	},
	"scripts": {
		"frontend": "npm run frontend:install && npm run frontend:build && npm run frontend:copy",
		"frontend:install": "cd ../frontend && npm i",
		"frontend:build": "cd ../frontend && npm run build",
		"frontend:copy": "webpack --mode none --config copy.frontend.webpack.config.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"webpack-prod": "webpack --mode production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package .",
		"test": "nyc mocha -p tsconfig.json --opts ./mocha.opts",
		"ws:run": "node ./out/webSocketServer/index.js",
		"lint": "tslint '*/*.{ts,tsx}' -c ./tslint.yml"
	},
	"dependencies": {
		"@sap-devx/webview-rpc": "^0.2.0",
		"datauri": "^2.0.0",
		"lodash": "^4.17.15",
		"strip-ansi": "^6.0.0",
		"ws": "^7.2.0",
		"yeoman-environment": "^2.6.0",
		"fs-extra": "^8.1.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.0.1",
		"@types/chai": "^4.2.5",
		"@types/inquirer": "^6.5.0",
		"@types/lodash": "^4.14.145",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.12.21",
		"@types/sinon": "^7.5.0",
		"@types/strip-ansi": "^5.2.1",
		"@types/ws": "^6.0.3",
		"@types/yeoman-environment": "^2.3.2",
		"chai": "^4.2.0",
		"copy-webpack-plugin": "^5.0.5",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"sinon": "^7.5.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.4",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-no-unused-expression-chai": "^0.1.4",
		"typescript": "^3.7.3",
		"vsce": "^1.68.0",
		"vscode": "^1.1.28",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	}
}
