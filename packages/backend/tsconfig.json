{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "ES2022",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "traceResolution": false,
    "declaration": true,
    "alwaysStrict": true,
    "paths": {
      "yeoman-environment/*": ["node_modules/yeoman-environment/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "api.d.ts"]
}
