{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "alwaysStrict": true
  },
  "exclude": ["node_modules", "dist"]
}
